int getIndex(int x, int y) {
  int index = (WIDTH-1-x)*8;
  if(x % 2 == 0) {
    index += 7-y;
  }
  else {
    index += y;
  }

  if(index < 0 || index > NUM_LEDS-1) {
    index = 1; //for debugging
  }

  return index;
}
